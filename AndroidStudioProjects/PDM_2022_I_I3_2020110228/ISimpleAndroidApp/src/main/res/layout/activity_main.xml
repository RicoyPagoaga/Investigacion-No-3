<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="101dp"
        android:layout_height="28dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="294dp"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvInteresG"
        app:layout_constraintTop_toBottomOf="@+id/btnCalular"
        tools:text="Hello World!" />

    <TextView
        android:id="@+id/txvInteresG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="294dp"
        android:text="Interes Generado:"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvTiempo" />

    <TextView
        android:id="@+id/txVCapital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="31dp"
        android:text="Capital:"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/txvInteres"
        app:layout_constraintEnd_toStartOf="@+id/txtCapital"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSaludo" />

    <TextView
        android:id="@+id/txvInteres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="29dp"
        android:text="Tasa Interes:"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/txvTiempo"
        app:layout_constraintEnd_toStartOf="@+id/txtInteres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txVCapital" />

    <TextView
        android:id="@+id/txtSaludo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="51dp"
        android:text="CALCULO DE INTERES SIMPLE"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/txvLps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="118dp"
        android:text="Tiempo:"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/txvInteresG"
        app:layout_constraintEnd_toStartOf="@+id/txtTiempo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvInteres" />

    <EditText
        android:id="@+id/txtCapital"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/txvLps"
        app:layout_constraintEnd_toStartOf="@+id/txvLps"
        app:layout_constraintStart_toEndOf="@+id/txVCapital" />

    <TextView
        android:id="@+id/txvLps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="31dp"
        android:text="Lps."
        android:textColor="@android:color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/txvPorcentaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtCapital"
        app:layout_constraintTop_toBottomOf="@+id/txtSaludo" />

    <EditText
        android:id="@+id/txtInteres"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/txvPorcentaje"
        app:layout_constraintEnd_toStartOf="@+id/txvPorcentaje"
        app:layout_constraintStart_toEndOf="@+id/txvInteres" />

    <TextView
        android:id="@+id/txvPorcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="30dp"
        android:text="%"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txvAnios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtInteres"
        app:layout_constraintTop_toBottomOf="@+id/txvLps" />

    <EditText
        android:id="@+id/txtTiempo"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/txvAnios"
        app:layout_constraintEnd_toStartOf="@+id/txvAnios"
        app:layout_constraintStart_toEndOf="@+id/txvTiempo" />

    <TextView
        android:id="@+id/txvAnios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="28dp"
        android:text="AÃ±os"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCalular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTiempo"
        app:layout_constraintTop_toBottomOf="@+id/txvPorcentaje" />

    <Button
        android:id="@+id/btnCalular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Calular"
        android:textColor="@android:color/white"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/text_view"
        app:layout_constraintEnd_toEndOf="@+id/txtTiempo"
        app:layout_constraintTop_toBottomOf="@+id/txvAnios" />

</androidx.constraintlayout.widget.ConstraintLayout>